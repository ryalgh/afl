---
import BaseHead from "../components/BaseHead.astro";
---
<html lang="es">
  <head>
    <BaseHead title="Inicio" />
  </head>
  <body>
    <main class="centered">
      <img src="images/logo.png" alt="Ayer fue Lunes" class="logo" />
      <h2 class="subtitle">Bienvenido</h2>
    </main>

    <style>
      .centered {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 2rem;
      }

      .logo {
        max-width: 360px;
        width: 80%;
        height: auto;
        margin-bottom: 1rem;
      }

      .subtitle {
        font-size: 1.5rem;
        font-weight: 700;
        line-height: 1.2;
      }
    </style>
  </body>
</html>


